<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
<!--        <jta-data-source>java:/PostgresDS</jta-data-source>-->
        <jta-data-source>java:/jdbc/postgresql</jta-data-source>

        <class>com.antonov.is2.entities.BookCreature</class>
        <class>com.antonov.is2.entities.Coordinates</class>
        <class>com.antonov.is2.entities.MagicCity</class>
        <class>com.antonov.is2.entities.Ring</class>
        <class>com.antonov.is2.entities.ImportOperation</class>
        <class>com.antonov.is2.entities.UserAccount</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property name="hibernate.show_sql" value="true"/>
<!--            <property name="hibernate.format_sql" value="true"/>-->


            <property name="javax.persistence.validation.mode" value="AUTO"/>
        </properties>
    </persistence-unit>
</persistence>
